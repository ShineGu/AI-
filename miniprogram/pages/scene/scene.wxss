/* pages/scene/scene.wxss */
.scene {
  height: 100vh;
  width: 100vw;
  position: absolute;
}

.scene .input {
  width: 80%;
  height: 5vh;

  position: absolute;
  top: 15vh;
  left: 50%;
  transform: translate(-50%);

  /* border: 0rpx solid; */
  background-color: rgba(128, 128, 128, 0.3);
  border-radius: 10px;
  
  font-family: 'spring-regular';
  color: #73A6A0;
  font-size: 16px;
  padding-left: 40rpx;
}

.scene .home-button {
  width: 15vh;
  height: 10vh;

  position: absolute;
  bottom: 74rpx;
  left: 50%;
  transform: translate(-50%);
  /* border-radius: 100%; */

  /* background-color: #ECCECD; */
  background-color: rgba(128, 128, 128, 0);
  z-index: 1000;

  border-radius: 50%;
  border: 27px solid rgba(128, 128, 128, 0.3);
  /* box-sizing: border-box; */
}

.home-button .text {
  width: 300rpx;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

  font-size: 37rpx;
  font-family: 'spring';

  /* color: #848861; */
}

.input-placeholder {
  font-size: 16px;
  position: absolute;
  /* left: 40rpx; */
  color: #73A6A0;
  font-family: 'spring-regular';
}

.scene .button {
  width: 300rpx;
  height: 7vh;

  position: absolute;
  top: 28vh;
  left: 50%;
  transform: translate(-50%);

  background-color: #ECCECD;
}

.scene .label {
  width: 750rpx;
  height: 3vh;

  background-color: rgba(128, 128, 128, 0.3);

  position: absolute;
  bottom: 8vh;
  /* z-index: 1000; */
}

.button .text {
  width: 300rpx;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-53%, -50%);

  font-size: 45rpx;
  font-family: 'spring';

  color: #848861;

}

.scene .image {
  width: 7vh;
  height: 6vh;

  position: absolute;
  top: 31vh;
  left: 450rpx;
  z-index: 1000;

}

.videoView .text {
  /* width: 300rpx; */

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

  font-size: 40rpx;
  font-family: 'spring-regular';

  color: #73A6A0;
}

.scene .videoView {
  width: 650rpx;
  height: 27vh;

  /* border: 1rpx solid; */
  background-color: rgba(128, 128, 128, 0.3);
  border-radius: 10px;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -20%);
}

.videoView .video {
  width: 100%;
  height: 100%;
}