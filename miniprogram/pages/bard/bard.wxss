  line-height: 4vh;
  font-family: 'HYXingKaiF';
}

.bard .home-button {
  width: 15vh;
  height: 10vh;

  position: absolute;
  bottom: 74rpx;
  left: 50%;
  transform: translate(-50%);
  /* border-radius: 100%; */

  /* background-color: #ECCECD; */
  background-color: rgba(128, 128, 128, 0);
