/* pages/bard/bard.wxss */
.bard {
  position: absolute;
  width: 100vw;
  height: 100vh;
}

.bard .image-preview {
  height: 27vh;
  width: 600rpx;

  position: absolute;
  top: 12vh;
  left: 50%;
  transform: translate(-50%);

  /* border: 1rpx dashed #ccc;
  background-color: #f2f2f2; */
  background-color: rgba(128, 128, 128, 0.3);

  display: flex;
  justify-content: center;
  align-items: center;

  overflow: hidden;
  cursor: pointer;
  user-select: none;
}

.image-preview .image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-preview .text {
  position: absolute;
  top: 50%;
  left: 50%;

  font-size: 16px;
  /* position: absolute; */
  /* left: 40rpx; */
  color: #FFEB3B;
  font-family: 'spring-regular';

  transform: translate(-50%, -50%);
}

.bard .button {
  position: absolute;
  top: 42vh;
  left: 50%;
  transform: translate(-50%);

  /* background-color: aquamarine; */

  width: 300rpx;
  height: 7vh;

  background-color: #ECCECD;
}

.button .text {
  width: 300rpx;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-53%, -50%);

  font-size: 45rpx;
  font-family: 'spring';

  color: #848861;

}

.bard .image-dog {
  width: 7vh;
  height: 6vh;

  position: absolute;
  top: 45vh;
  left: 450rpx;
  z-index: 1000;
}


.test {
  position: absolute;
  top: 10vh;
  left: 100rpx;
}

.bard .label {
  position: absolute;
  top: 52vh;
  left: 50%;
  transform: translate(-50%);

  width: 600rpx;
  height: 30vh;
  background-color: rgba(128, 128, 128, 0.3);

  /* border: 1rpx solid; */

  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
}

.label .biaoti {
  position: relative;
  top: 4vh;
  font-size: 60rpx;
  line-height: 4vh;
  font-family: 'HYXingKaiF';
}

.label .sentences {
  position: relative;
