/* music-player.wxss */
.music-player {
  display: flex;
  flex-direction: column;
  align-items: left;
  padding: 20px;
  background-color: rgba(147,207,218,0.75);
  border-radius: 40rpx;
}

.song-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.album-cover {
  width: 50px;
  height: 50px;
  border-radius: 10%;
  margin-right: 20rpx;
  /* z-index: 1000; */
}

.song-details {
  display: flex;
  flex-direction: column;
}

.song-name {
  font-size: 18px;
  font-weight: bold;
  font-family: 'spring-regular';
}

.artist-name {
  font-size: 14px;
  color: #888;
}

.controls {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.progress-bar {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 10px;
}

.current-time, .duration {
  font-size: 14px;
  color: #888;
}

.progress-slider {
  flex: 1;
  margin: 0 20rpx;
  /* background-color: #e0e0e0; */
}

.control-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.control-button {
  font-size: 40rpx;
  color: #888;
  background-color: transparent;
}

.control-button .image {
  position: relative;
  top: -50%;
  left: -50%;
  
  width: 200%;
  height: 200%;
}